{
  "manifest_version": 3,
  "name": "CHALAMANDRA: IA Dialéctica",
  "version": "1.0",
  "description": "Una IA Dialéctica (Tesis, Antítesis, Síntesis) para la toma de decisiones impulsada por Gemini Nano y Chrome AI.",
  "icons": {
    "16": "icons/flame16.png",
    "48": "icons/flame48.png",
    "128": "icons/flame128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/flame16.png",
      "24": "icons/flame24.png",
      "32": "icons/flame32.png"
    },
    "default_title": "CHALAMANDRA: Iniciar Análisis",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
