{
  "manifest_version": 3,
  "name": "Hybrid Dialectic 369",
  "version": "1.0",
  "description": "Creative synthesis tool: Generates Thesis, Antithesis, and Synthesis from any concept.",
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon_16.png",
      "48": "assets/icon_48.png",
      "128": "assets/icon_128.png"
    },
    "default_title": "Hybrid Dialectic 369"
  },
  
  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  
  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}

